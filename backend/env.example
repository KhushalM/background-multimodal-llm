# =============================================================================
# Multimodal AI Assistant Backend Configuration
# Copy this file to .env and fill in your actual API keys
# =============================================================================

# Required API Keys
# -----------------
# OpenAI API (for GPT models and STT/TTS)
OPENAI_API_KEY=your_openai_api_key_here

# Google API (for Gemini Vision and text models)
GOOGLE_API_KEY=your_google_api_key_here

# HuggingFace API (for speech-to-text models)
HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# Optional API Keys
# -----------------
# Anthropic API (if using Claude models)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# AWS (if using AWS services)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1

# Server Configuration
# --------------------
BACKEND_HOST=localhost
BACKEND_PORT=8000
FRONTEND_URL=http://localhost:3000

# Model Configuration
# -------------------
# OpenAI Models
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_STT_MODEL=whisper-1
OPENAI_TTS_MODEL=tts-1

# Google Models
GOOGLE_TEXT_MODEL=gemini-2.0-flash-exp
GOOGLE_VISION_MODEL=gemini-2.0-flash-exp

# HuggingFace Models
HF_STT_MODEL=distil-whisper/distil-large-v3.5
HF_TTS_MODEL=microsoft/speecht5_tts

# Screen Context Configuration
# ----------------------------
SCREEN_MAX_IMAGE_SIZE=1920
SCREEN_COMPRESSION_QUALITY=85
SCREEN_ANALYSIS_INTERVAL=5
SCREEN_CACHE_DURATION=300

# Audio Configuration
# -------------------
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_DURATION=2.0
AUDIO_MAX_RETRIES=3
AUDIO_TIMEOUT=30.0

# Performance Settings
# --------------------
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=60
CACHE_TTL=3600

# Development Settings
# --------------------
DEBUG=true
LOG_LEVEL=INFO
DEVELOPMENT_MODE=true

# Security (for production)
# -------------------------
# SECRET_KEY=your_secret_key_here
# ALLOWED_HOSTS=localhost,127.0.0.1
# CORS_ORIGINS=http://localhost:3000 